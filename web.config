<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Redirect API requests to the .NET Core app -->
        <rule name="API Redirect" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="skills-scope-backend/{R:1}" />
        </rule>
        
        <!-- Redirect all other requests to the Next.js app -->
        <rule name="Next.js Redirect" stopProcessing="true">
          <match url="^(?!api/).*" />
          <action type="Rewrite" url="skills-scope/server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
    </handlers>
    
    <aspNetCore processPath="dotnet" arguments=".\skills-scope-backend.dll" stdoutLogEnabled="true" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
    
    <!-- ... additional settings ... -->
  </system.webServer>
</configuration>
